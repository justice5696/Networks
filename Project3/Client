CC=gcc
CFLAGS= -c -std=c11 -Wall
LDFLAGS=
SOURCES=Project3Client.c
OBJECTS=$(SOURCES:.c=.o)
EXECUTABLE= Project3Client
TARFILES = Project3
TARNAME = JUSProject3.tar

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.c.o:
	$(CC) $(CFLAGS) $< -o $@

clean:
	\rm *.o *~ $(EXECUTABLE)

tar:
	cd .. && tar cfv $(TARNAME) $(TARFILES)
